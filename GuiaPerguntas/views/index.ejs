<%- include ('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs'); %>
    
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar " class="btn btn-dark">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%=pergunta.titulo %></h3> <!-- exibindo uma variavel-->
                </div>
                <div class="card-footer">
                    <p><%= pergunta.descricao%></p>
                   <a href="/pergunta/<%=pergunta.id%>"><button class="btn btn-dark" >Responder</button></a>

                </div>
            </div>
        <%})%>

    </div>




</body>
<%- include ('partials/footer.ejs'); %>